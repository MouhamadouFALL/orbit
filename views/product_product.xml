<odoo>
    <record id="view_product_form_inherit_preorder" model="ir.ui.view">
        <field name="name">product.form.inherit.preorder</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                
                    <field name="en_promo"/>
                    <label for="en_promo"/>

                    <field name="is_preorder"/>
                    <label for="is_preorder"/>

                </span>
            </xpath>
            <xpath expr="//div[@name='pricing']" position="after">

                <label for="preorder_price"/>
                <div name="preorder_price">
                    <field name="preorder_price" class="oe_inline" widget='monetary' 
                        options="{'currency_field': 'currency_id', 'field_digits': True}" />
                </div>
                <label for="rate_price"/>
                <div name="rate_price">
                    <field name="rate_price" class="oe_inline" widget='float'/>
                </div>
                <label for="promo_price"/>
                <div name="promo_price">
                    <field name="promo_price" class="oe_inline" widget='monetary'/>
                </div>

            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Preorder">
                    <group string="Preorder">
                        <group >
                            <field name="preorder_deadline" string="Dead Line preorder allowed"/>
                            <field name="preorder_payment_option" string="option payment for delivered preorder"/>
                        </group>                       
                        <group>
                            <field name="preorder_quantity_allow" string="Quantity Allowed preorder"/>
                            <field name="preorder_threshold" string="Preorder threshold"/>
                        </group>
                    </group>
                </page>
                <page string="Price &amp; Quantity">
                    <group string="Price and Quantity">
                        
                        <group>
                            <field name="qty_available" string="Quantité disponible" readonly="1"/>
                            <field name="incoming_qty" string="Quantité attendue" readonly="1"/>
                            <field name="virtual_available" string="Quantité prévisionnelle" readonly="1"/>
                        </group>
                        <group>
                            <field name="ordered_qty" string="Quantité commandée" readonly="1"/>
                            <field name="preordered_qty" string="Quantité précommandée" readonly="1"/>
                            <!-- <field name="outgoing_qty" string="Quantité total sortante" readonly="1"/> -->
                            <!-- <field name="free_qty" string="Quantité Libre" readonly="1"/> -->
                        </group>
                        
                        <!-- <group>
                            <field name="list_price" string="Price order" readonly="1"/>
                            <field name="preorder_price" string="Price preorder" readonly="1"/>
                            <field name="standard_price" string="Price purchase" readonly="1"/>
                        </group> -->
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- ************************************ View Tree ************************************ -->
    <record id="view_preorder_product_product_stock_tree" model="ir.ui.view">
        <field name="name">product.product.stock.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_product_stock_tree"/>
        <field name="arch" type="xml">
            <field name="outgoing_qty" position="after">
                <field name="preordered_qty" optional="show" sum="Total Preorder_qty"/>
                <field name="ordered_qty" invisible="1" sum="Total Order_qty" />
            </field>
        </field>
    </record>

    


        <record model="ir.actions.act_window" id="action_product_stock_prorder_view">
        <field name="name">Stock</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_preorder_product_product_stock_tree"/>
        <field name="search_view_id" ref="stock.product_search_form_view_stock_report"/>
        <field name="context">{'default_detailed_type': 'product'}</field>
        <field name="domain">[('detailed_type', '=', 'product')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stock to show
            </p><p>
                Create some storable products to see their stock info in this view.
            </p>
        </field>
    </record>

</odoo>
