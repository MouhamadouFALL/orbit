<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="payment_plan_view_form">
        <field name="name">at.payment.plan.form</field>
        <field name="model">at.payment.plan</field>
        <field name="arch" type="xml">

            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="sale_order_id"/>
                        </group>
                        <group>
                            <field name="reminder_date1"/>
                            <field name="reminder_date2"/>
                            <field name="reminder_date3"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Paiments echeances"></page>
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record model="ir.ui.view" id="payment_plan_view_tree">
        <field name="name">at.payment.plan.tree</field>
        <field name="model">at.payment.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sale_order_id"/>
                <field name="reminder_date1"/>
                <field name="reminder_date2"/>
                <field name="reminder_date3"/>
                <!--<field name="payment_amount_due"/>
                <field name="payment_amount_overdue"/>-->
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="payment_plan_action">
        <field name="name">Payment Plan</field>
        <field name="res_model">at.payment.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>