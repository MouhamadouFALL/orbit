        <field name="model">crm.quotation.partner</field>
        <field name="inherit_id" ref="sale_crm.crm_quotation_partner_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group" position="inside">
                <group>
                    <field name="type_sale" widget="radio"/>
                </group>
            </xpath>

        </field>
    </record>



</odoo>