<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ### categorie Groupe -->
    <record id="orbit_groups" model="ir.module.category">
        <field name="name">ORBITCITY</field>
        <field name="description">Helps you to manager your sales and employees</field>
        <field name="sequence">170</field>
    </record>

    <!-- ### Groupes -->
    <record id="admin_group_user" model="res.groups">
        <field name="name">Admin OrbitCity</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">The Admin of OrbitCity</field>
    </record>
    <record id="emp_group_user" model="res.groups">
        <field name="name">Employees OrbitCity</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">The employees of OrbitCity</field>
    </record>
    <record id="affiliate_group_user" model="res.groups">
        <field name="name">Affiliates</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">The affiliates of OrbitCity</field>
        <field name="implied_ids" eval="[(4, ref('emp_group_user'))]"/>
    </record>
    <record id="emp_group_commercial" model="res.groups">
        <field name="name">Commercial</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">Le vendeur</field>
        <field name="implied_ids" eval="[(4, ref('emp_group_user'))]"/>
    </record>
    <record id="emp_group_caisse" model="res.groups">
        <field name="name">Caissier</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">Gestionnaire de caisse</field>
        <field name="implied_ids" eval="[(4, ref('emp_group_user'))]"/>
    </record>

    <!-- Groupes de Sécurité pour chaque type de vente  Regular Order Group, Pre-Order Group, Credit Order Group-->
    <record id="order_group_user" model="res.groups">
        <field name="name">Standard order</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">Groupe de vente standars</field>
        <field name="implied_ids" eval="[(4, ref('emp_group_user'))]"/>
    </record>
    <record id="preorder_group_user" model="res.groups">
        <field name="name">Pre-Order</field>
        <field name="category_id" ref="orbit_groups"/>
        <field name="comment">Groupe de prévente</field>
        <field name="implied_ids" eval="[(4, ref('emp_group_user'))]"/>
    </record>

</odoo>